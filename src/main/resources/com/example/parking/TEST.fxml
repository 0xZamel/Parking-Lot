<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fx:id="spotsPane" fitToHeight="true" fitToWidth="true" visible="false"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.parking.gui.TestController">
    <VBox alignment="TOP_CENTER" prefHeight="419.0" prefWidth="631.0" spacing="10">

        <ScrollPane fitToHeight="true" fitToWidth="true">
            <VBox fx:id="spotContainer" alignment="TOP_CENTER" spacing="10" />
        </ScrollPane>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="addSpotButton" onAction="#addSpot" text="Add Spot" />
            <Button fx:id="removeSpotButton" onAction="#removeSpot" text="Remove Spot" />
        </HBox>
    </VBox>
</ScrollPane>