<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="673.0" prefWidth="873.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.parking.gui.AdminPageController">
    <children>
        <VBox spacing="10" layoutX="10" layoutY="10" prefWidth="400">
            <Text text="Admin Dashboard" style="-fx-font-size: 20;" />

            <TitledPane text="Manage Parking Spots">
                <VBox spacing="5">
                    <HBox spacing="5">
                        <Label text="Spot ID:" />
                        <TextField fx:id="spotIDField" promptText="Enter Spot ID" />
                        <Button text="Remove Spot" onAction="#removeSpot" />
                    </HBox>
                </VBox>
            </TitledPane>

            <TitledPane text="Manage Slots">
                <VBox spacing="5">
                    <HBox spacing="5">
                        <Label text="Spot ID:" />
                        <TextField fx:id="slotSpotIDField" promptText="Enter Spot ID" />
                        <Label text="Slot ID:" />
                        <TextField fx:id="slotIDField" promptText="Enter Slot ID" />
                        <Button text="Remove Slot" onAction="#removeSlot" />
                    </HBox>
                </VBox>
            </TitledPane>

            <TitledPane text="Manage Owners">
                <VBox spacing="5">
                    <HBox spacing="5">
                        <Label text="Owner ID:" />
                        <TextField fx:id="ownerIDField" promptText="Enter Owner ID" />
                        <Button text="Remove Owner" onAction="#removeOwner" />
                    </HBox>
                </VBox>
            </TitledPane>

            <TitledPane text="Financial Reports">
                <VBox spacing="5">
                    <HBox spacing="5">
                        <Label text="Vehicle Type:" />
                        <ComboBox fx:id="vehicleTypeComboBox">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="Car" />
                                    <String fx:value="Bike" />
                                    <String fx:value="4x4" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                        <Button text="Calculate Total" onAction="#calculateTotalAmount" />
                    </HBox>
                    <Label fx:id="totalAmountLabel" text="Total Amount: 0.0" />
                </VBox>
            </TitledPane>

        </VBox>
    </children>
</AnchorPane>
